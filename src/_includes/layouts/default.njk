    <meta name="description" content="{{metaDescription}}">
  {% endif %}

  <link rel="stylesheet" href="/styles/{{pkg.version}}/index.css">
  <link rel="canonical" href="{{global.baseUrl}}">
  <link rel="alternate" type="application/rss+xml" title="Subscribe to posts" href="/feed.xml" />
  <title>
    {% if title %}{{ title }} | {% endif %}paulsalaets.com
  </title>
</head>
<body class="text-base font-sans text-gray-900">
  <header class="p-4 mx-auto sm:max-w-3xl sm:px-20">
