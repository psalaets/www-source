    {% include "partials/site-nav.njk" %}
  </header>
  <main id="main" class="pb-4">
    <div class="mx-auto bg-white p-4 sm:max-w-3xl sm:px-20">
      {{ content | safe }}
    </div>
  </main>
  <footer class="p-8 text-center text-sm border-t-2 border-gray-200">
